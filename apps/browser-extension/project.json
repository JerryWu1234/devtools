{
  "name": "browser-extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/browser-extension/src",
  "targets": {
    "build": {
      "executor": "qwik-nx:build",
      "options": {
        "runSequence": [
          "browser-extension:build.client",
          "browser-extension:post.build"
        ],
        "outputPath": "dist/apps/browser-extension"
      },
      "configurations": {
        "preview": {},
        "production": {}
      }
    },

    "dev": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "browser-extension:build.client"
      }
    },
    "build.client": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc && vite build",
        "cwd": "apps/browser-extension"
      }
    },
    "post.build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project ./build/scripts/tsconfig.json --outDir ../../dist/apps/browser-extension && tsx ./build/postBuild.ts",
        "cwd": "apps/browser-extension"
      }
    }
  },
  "tags": []
}
